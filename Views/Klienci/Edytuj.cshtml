@model Projekt.Models.KlientModel
@{
    ViewBag.Title = "Edytuj";
}

<h2>Edytuj klienta</h2>
<form method="post">
    <fieldset>
        <div class="editor-label">
            Imię
        </div>
        <div class="editor-field">
            <input name="klient.imie" value="@Model.imie" />
        </div>

        <div class="editor-label">
            Nazwisko
        </div>
        <div class="editor-field">
            <input name="klient.nazwisko" value="@Model.nazwisko" />
        </div>

        <div class="editor-label">
            Data zamówienia
        </div>
        <div class="editor-field">
            <input name="klient.data" value="@Model.data" />
        </div>
        <br />
        
        <p>
            <input type="submit" class="btn btn-warning" value="OK">
            <a href="/Klienci/Index" class="btn btn-warning" role="button">Powrót</a>
        </p>

    </fieldset>
</form>

